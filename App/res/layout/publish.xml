<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/publish"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="@string/title_activity_publish"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/topictitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="0.1"
        android:ems="10"
        android:hint="@string/titlename" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/typecontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="0.3"
        android:background="#d3d3d3"
        android:ems="10"
        android:hint="@string/typeinthecontents"
        android:scrollbars="vertical" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.54"
            android:background="#a9a9a9"
            android:contentDescription="@string/image_preview_ins"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/foo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="0.44"
            android:orientation="vertical" >

            <Button
                android:id="@+id/attach"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="@string/attachpicture"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cancelPublish"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="@string/cancel"
                android:textStyle="bold" />

            <Button
                android:id="@+id/commitPublish"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="@string/commit"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/publishblank1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05" />

</LinearLayout>