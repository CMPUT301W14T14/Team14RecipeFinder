<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    

    <ListView
        android:id="@+id/GreatTopic"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_x="154dp"
        android:layout_y="75dp"
        android:background="#000000"
        android:divider="#ffffff"
        android:dividerHeight="2dp"
        android:textColor="#ffffff" >

    </ListView>

    <ListView
        android:id="@+id/TopicList"
        android:layout_width="289dp"
        android:layout_height="168dp"
        android:layout_x="14dp"
        android:layout_y="235dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:divider="#ffffff"
        android:dividerHeight="2dp"
        android:scrollbars="vertical" >

    </ListView>

    <Button
        android:id="@+id/sort1"
        android:layout_width="113dp"
        android:layout_height="30dp"
        android:layout_x="14dp"
        android:layout_y="6dp"
        android:background="#a9a9a9"
        android:text="@string/sort"
        android:textSize="13sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/createTopic"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_x="195dp"
        android:layout_y="406dp"
        android:background="#a9a9a9"
        android:text="@string/publishbutton"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/userbutton1"
        android:layout_width="148dp"
        android:layout_height="28dp"
        android:layout_x="155dp"
        android:layout_y="40dp"
        android:background="#a9a9a9"
        android:text="@string/userinfobutton"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/LaterList1"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:layout_x="16dp"
        android:layout_y="42dp"
        android:background="#a9a9a9"
        android:text="@string/latelist"
        android:textSize="13sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="127dp"
        android:layout_height="152dp"
        android:layout_x="17dp"
        android:layout_y="72dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/userinfo1"
        android:layout_width="148dp"
        android:layout_height="35dp"
        android:layout_x="155dp"
        android:layout_y="2dp"
        android:background="#000000"
        android:ems="10"
        android:text="@string/userinfotext"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold" />

</AbsoluteLayout>
