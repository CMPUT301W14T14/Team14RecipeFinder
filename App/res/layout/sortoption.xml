<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"    
    android:orientation="vertical" >

    <Button
        android:id="@+id/generalsort"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sortbyotherlocation"
        android:layout_alignLeft="@+id/sortbylocation"
        android:layout_marginBottom="15dp"
        android:background="#000000"
        android:text="@string/sortscore"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sortbyotherlocation"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/generalsort"
        android:layout_alignRight="@+id/generalsort"
        android:layout_centerVertical="true"
        android:background="#000000"
        android:text="@string/sort by other location"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sortbypicture"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sortbyotherlocation"
        android:layout_below="@+id/sortbyotherlocation"
        android:layout_marginTop="17dp"
        android:background="#000000"
        android:text="@string/sort by picture"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sortbylocation"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/generalsort"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#000000"
        android:text="@string/sort by my location"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>
