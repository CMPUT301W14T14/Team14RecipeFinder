<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/username"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_x="90dp"
        android:layout_y="30dp"
        android:text="The User Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/logout"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_x="89dp"
        android:layout_y="76dp"
        android:background="#000000"
        android:text="logout"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/favourite"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_x="88dp"
        android:layout_y="144dp"
        android:text="favourite" />

    <Button
        android:id="@+id/userinfoBack"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_x="89dp"
        android:layout_y="345dp"
        android:background="#000000"
        android:textColor="#ffffff" 
        android:text="back"/>

    <Button
        android:id="@+id/setname"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_x="88dp"
        android:layout_y="275dp"
        android:text="reset name" />

    <Button
        android:id="@+id/historytopic"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_x="90dp"
        android:layout_y="209dp"
        android:text="viewed topic" />

</AbsoluteLayout>