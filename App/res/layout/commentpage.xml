<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sort2"
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="0.3"
            android:background="#a9a9a9"
            android:text="@string/sort"
            android:textStyle="bold" />

        <Button
            android:id="@+id/SaveForLater"
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="0.3"
            android:background="#d3d3d3"
            android:text="@string/readlater"
            android:textStyle="bold" />

        <Button
            android:id="@+id/userbutton2"
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="#a9a9a9"
            android:text="@string/userinfobutton"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/commentText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.3"
        android:background="#d3d3d3"
        android:padding="3dp"
        android:scrollbars="vertical"
        android:text="@string/topiccontenttext"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/authorInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.1"
        android:background="#000000"
        android:text="@string/authorinfo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.4" >

        <ImageView
            android:id="@+id/topicImage"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.39"
            android:adjustViewBounds="true"
            android:background="#a9a9a9"
            android:contentDescription="@string/attached_pic_dis"
            android:padding="3dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/foo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02" />

        <ListView
            android:id="@+id/commentList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.59"
            android:background="#000000"
            android:divider="#ffffff"
            android:dividerHeight="2dp"
            android:scrollbars="vertical" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/edit"
            style="@style/AppBaseTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="0.25"
            android:background="#a9a9a9"
            android:text="@string/edit"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Like"
            style="@style/AppBaseTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="0.25"
            android:background="#d3d3d3"
            android:text="@string/like"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reply"
            style="@style/AppBaseTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="0.25"
            android:background="#a9a9a9"
            android:text="@string/reply"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sync"
            style="@style/AppBaseTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="#d3d3d3"
            android:text="@string/sync"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>