<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/setNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/type_new_user_name"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/type_new_user_name"
        android:layout_marginTop="108dp"
        android:text="@string/enternewusername"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/type_new_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/reset_user_name_ins"
        android:inputType="text"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/setNameNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/setNameOk"
        android:layout_alignBottom="@+id/setNameOk"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:text="@string/cancel" />

    <Button
        android:id="@+id/setNameOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/type_new_user_name"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="74dp"
        android:text="@string/commit" />

</RelativeLayout>
